{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "SERVER_PORT": "8080",
                "SERVER_HOST": "0.0.0.0"
            },
            "args": [],
            "showLog": true,
            "trace": "verbose",
            "logOutput": "rpc"
        },
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.v"
            ],
            "showLog": true
        },
        {
            "name": "Debug Current Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": [
                "-test.run",
                "^${input:testName}$",
                "-test.v"
            ],
            "showLog": true
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Debug with Air (Hot Reload)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "preLaunchTask": "air-debug",
            "env": {
                "AIR_DEBUG": "1"
            },
            "showLog": true
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Test function name",
            "default": "TestParseGameID",
            "type": "promptString"
        }
    ]
}
